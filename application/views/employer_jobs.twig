                                    <a href="#" aria-label="Next"> <span aria-hidden="true">»</span> </a>
                                </li>
                            </ul>
                        </div>
                    </div> #}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block footer %}
    {% embed "footer.twig" %}
        {% block customScripts %}
            <script type="text/javascript" src="../../js/dashboard.js"></script>
        {% endblock customScripts%}
    {% endembed %}
{% endblock %}